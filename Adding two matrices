#include <iostream>

using namespace std;

int main()
{
    int arr1[2][2], arr2[2][2],arr3[2][2],i,j;
    cout<<"Enter Elements of First Matrix: ";
    for(i=0; i<2; i++)
    {
        for(j=0; j<2; j++)
            cin>>arr1[i][j];
    }
    cout<<"Enter Elements of Second Matrix: ";
    for(i=0; i<2; i++)
    {
        for(j=0; j<2; j++)
            cin>>arr2[i][j];
    }
    cout<<"\nAdding the Two Given Matrix...\n";
    for(i=0; i<2; i++)
    {
        for(j=0; j<2; j++)
            arr3[i][j] = arr1[i][j]+arr2[i][j];
    }
    cout<<"Addition Two Given Matrix is:\n";
    for(i=0; i<2; i++)
    {
        for(j=0; j<2; j++)
            cout<<arr3[i][j]<<" ";
        cout<<endl;
    }
    return 0;
}

